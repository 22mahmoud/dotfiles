prefer-no-csd

environment {
  ELECTRON_OZONE_PLATFORM_HINT "auto"
}

hotkey-overlay {
  skip-at-startup
}

recent-windows {
  off
}

cursor {
  hide-when-typing true
  xcursor-theme "Qogir-Dark"
  xcursor-size 24
  hide-after-inactive-ms 10000
}

animations {
  workspace-switch {
    off
  }

  window-open {
    off
  }

  window-close {
    off
  }
}
