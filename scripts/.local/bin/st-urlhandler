#!/usr/bin/env bash
# vim: ft=bash

urlregex='(((http|https|gopher|gemini|ftp|ftps|git)://|www\\.)[a-zA-Z0-9.]*[:;a-zA-Z0-9./+@$&%?$\#=_~-]*)|((magnet:\\?xt=urn:btih:)[a-zA-Z0-9]*)'

urls="$(sed 's/.*â”‚//g' | tr -d '\n' | # First remove linebreaks and mutt sidebars:
  grep -aEo "${urlregex}" |           # grep only urls as defined above.
  uniq |                              # Ignore neighboring duplicates.
  sed "s/\(\.\|,\|;\|\!\\|\?\)$//;
s/^www./http:\/\/www\./")" # xdg-open will not detect url without http

[ -z "${urls}" ] && exit 1

while getopts "hoc" o; do case "${o}" in
  h) printf "Optional arguments for custom use:\\n  -c: copy\\n  -o: xdg-open\\n  -h: Show this message\\n" && exit 1 ;;
  o)
    chosen=$(echo "${urls}" | fzf-menu --prompt='ðŸ”— Follow which url? ')
    if [[ -n "${chosen}" ]]; then
      setsid xdg-open "${chosen}" >/dev/null 2>&1 &
    fi
    ;;
  c)
    chosen=$(echo "$urls" | fzf-menu --prompt='ðŸ“Ž Copy which url? ')

    if [[ -n "${chosen}" ]]; then
      echo -n "${chosen}" |
        xclip -selection clipboard &&
        notify-send -t 1000 "ðŸ”— Url" "url copied to your clipboard\n\"${chosen}"\"
    fi
    ;;
  *) printf "Invalid option: -%s\\n" "${OPTARG}" && exit 1 ;;
  esac done
