#!/usr/bin/env bash
# vim: ft=bash

urls="$(urlscan -cn)"

[ -z "${urls}" ] && exit 1

while getopts "hoc" o; do case "${o}" in
  h) printf "Optional arguments for custom use:\\n  -c: copy\\n  -o: xdg-open\\n  -h: Show this message\\n" && exit 1 ;;
  o)
    chosen=$(echo "${urls}" | fzf-menu --prompt='ðŸ”— Follow which url? ')
    if [[ -n "${chosen}" ]]; then
      setsid xdg-open "${chosen}" >/dev/null 2>&1 &
    fi
    ;;
  c)
    chosen=$(echo "$urls" | fzf-menu --prompt='ðŸ“Ž Copy which url? ')

    if [[ -n "${chosen}" ]]; then
      echo -n "${chosen}" |
        xclip -selection clipboard &&
        notify-send -t 1000 "ðŸ”— Url" "url copied to your clipboard\n\"${chosen}"\"
    fi
    ;;
  *) printf "Invalid option: -%s\\n" "${OPTARG}" && exit 1 ;;
  esac done
