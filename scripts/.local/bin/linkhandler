#!/bin/sh

[ -z "$1" ] && {
  "$BROWSER"
  exit
}

case "$1" in
*mkv | *webm | *mp4 | *youtube.com/watch* | *youtube.com/playlist* | *youtu.be* | *hooktube.com* | *bitchute.com*)
  setsid -f mpx -a "$1" >/dev/null 2>&1
  ;;
*png | *jpg | *jpe | *jpeg | *gif)
  imv "$1"
  ;;
*gif*)
  imv "$1"
  ;;
*)
  if [ -f "$1" ]; then
    "$TERMINAL" -e "$EDITOR $1"
  else setsid -f "$BROWSER" "$1" >/dev/null 2>&1; fi
  ;;
esac
