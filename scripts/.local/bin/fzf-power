#!/usr/bin/env bash

selection="$(printf "ğŸ”’ Lock\nğŸšª Log out\nğŸ˜´ Sleep\nğŸ”„ Reboot\nâ­ Shutdown" |
  fzf-menu --class="fzf-menu-power" --prompt "ğŸ’¡ Power Menu ~ ")"

case "$selection" in
*"Lock")
  swaylock
  ;;
*"Log out")
  niri msg action quit -s
  ;;
*"Sleep")
  systemctl suspend
  ;;
*"Reboot")
  systemctl reboot
  ;;
*"Shutdown")
  systemctl poweroff
  ;;
esac
