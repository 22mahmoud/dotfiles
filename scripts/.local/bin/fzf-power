#!/usr/bin/env bash

selection="$(printf "ğŸ”’ Lock\nğŸšª Log out\nğŸ”„ Reboot\nâ­ Shutdown" |
  fzf-menu --class="fzf-menu-power" --prompt "ğŸ’¡ Power Menu ~ ")"

case "$selection" in
*"Lock")
  swaylock -f
  ;;
*"Log out")
  loginctl terminate-user "$USER"
  ;;
*"Reboot")
  systemctl reboot
  ;;
*"Shutdown")
  systemctl poweroff
  ;;
esac
