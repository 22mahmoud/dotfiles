#!/bin/sh

usage() {
  while IFS= read -r line; do
    printf '%s\n' "$line"
  done <<-EOF

  volume [ -i | -d | -t | -h ]
    control volume with notifcations

  -h|help     show this help
  -i|inc      increase volume
  -d|dec      decrease volume
  -t|toggle   toggle volume mute/unmute
EOF
}

inc() {
  pamixer -i 5
}

dec() {
  pamixer -d 5
}

toggle() {
  pamixer -t
}

get_icon() {
  volume=$(pamixer --get-volume)

  if [ "$(pamixer --get-mute)" = true ]; then
    icon=ðŸ”‡
  elif [ "$volume" -gt 70 ]; then
    icon=ðŸ”Š
  elif [ "$volume" -gt 30 ]; then
    icon=ðŸ”‰
  elif [ "$volume" -gt 0 ]; then
    icon=ðŸ”ˆ
  else
    icon=ðŸ”‡
  fi

  echo $icon
}

notify() {
  notify-send \
    -t 1500 \
    -u low \
    "$(get_icon) Sound" "Volume: $(pamixer --get-volume-human)" \
    -h string:x-canonical-private-synchronous:"changeVolume"

}

main() {
  case "$1" in
    -h|help) usage ;;
    -i|inc) inc ;;
    -d|dec) dec ;;
    -t|toggle) toggle ;;
    *) exit 0 ;;
  esac

  notify
}

main "$@"
