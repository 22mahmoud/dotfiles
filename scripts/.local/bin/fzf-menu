#!/usr/bin/env bash
# vim: ft=bash

cleanup() {
  rm -rf "$input" "$output"
  kill $! 2>/dev/null
}

input=$(mktemp -u --suffix .fzfmenu.input)
output=$(mktemp -u --suffix .fzfmenu.output)

mkfifo "$input"
mkfifo "$output"

chmod 600 "$input" "$output"

alacritty \
  --class fzf-menu,fzf-menu \
  --title fzf-menu \
  --command zsh -c "
    cat $input |
    fzf \
      --layout=reverse \
      --prompt='~ ' \
      $(printf -- " '%s'" "$@" | sed "s/^ ''$//") |
    tee $output
  " &

disown

trap cleanup EXIT INT TERM

cat >"$input"
cat "$output"
