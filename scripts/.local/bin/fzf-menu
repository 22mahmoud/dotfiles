#!/usr/bin/env bash
# vim: ft=bash

export FZF_DEFAULT_OPTS="${FZF_DEFAULT_OPTS:-} \
  --layout=reverse \
  --prompt='~ '"

cleanup() {
  rm -rf "$input" "$output"
  kill $! 2>/dev/null
}

input=$(mktemp -u --suffix .fzfmenu.input)
output=$(mktemp -u --suffix .fzfmenu.output)

mkfifo "$input"
mkfifo "$output"

chmod 600 "$input" "$output"

st -c fzf-menu -n fzf-menu \
  -e zsh -c \
  "source \"${ZDOTDIR}/.zshrc\"; cat $input | fzf $(printf -- " '%s'" "$@" | sed "s/^ ''$//") | tee $output" &

disown

trap cleanup EXIT INT TERM

cat >"$input"
cat "$output"
